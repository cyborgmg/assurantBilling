body {
    margin: 0px;
    padding: 0px;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;    
    color: #1e1e1e;
}

p {
    margin: 14px 0px 14px 0px;
    padding: 0px;
    line-height: 130%;
}

a, a:visited, a:active {
    color: #1b6c8f;
    text-decoration: none;
}

a:hover {
    color: #09445D;
    text-decoration: underline;
}

form {
    margin: 0px;
    padding: 0px;
}

input[type=text], input[type=password], textarea{
    display: inline-block;   
    border: 1px solid #ddd; 
    padding: 4px 8px; 
    vertical-align: middle;
}

select{
    display: inline-block;   
    border: 1px solid #fff; 
    padding: 0; 
    vertical-align: middle;
}

img {
    padding: 0px;
    border: 0px;
}

h1, h1 a, h1 a:visited, h1 a:active, h1 a:hover {
    letter-spacing: -1px;
    color: #175c7a;
    font-size: 52px;
    font-weight: bold;
    text-decoration: none;
    line-height: 100%;
    margin: 0px;
    padding: 28px 0px 0px 0px;
}

h2 {
    font-size: 20px;
    text-align: right;
    text-decoration: none;
    letter-spacing: -1px;
    color: #09445D;
    border-bottom: 1px solid #ddd;
    margin: 0;
    padding: 0;
    font-weight: bold;
}

h2 a, h2 a:visited, h2 a:active {
    font-size: 20px;
    text-decoration: none;
    color: #ccc;
}

h2 a:hover{
    color: #999; 
    text-decoration: none;
}

h3 {
    margin: 10px 0px 14px 0px;	
    color: #1e1e1e;
    font-size: 15px;
    font-weight: bold;
}