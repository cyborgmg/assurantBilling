<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <module-name>dbsportal</module-name>
  <context-param>
    <description>Código da empresa para identificação da empresa para qual o sistema foi desenvolvido.</description>
    <param-name>codEmpresa</param-name>
    <param-value>1</param-value>
  </context-param>
  <context-param>
    <description>Código do sistema para identificação do sistema sendo executado.</description>
    <param-name>codSistema</param-name>
    <param-value>BMS</param-value>
  </context-param>
  <context-param>
    <description>Código do sistema no permissão para identificação do sistema sendo executado.</description>
    <param-name>codSistemaPermissao</param-name>
    <param-value>1</param-value>
  </context-param>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>2</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>2</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>FiltrarListasServlet</servlet-name>
    <servlet-class>br.com.delphos.web.vendas.FiltrarListasServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AutoCompleteServlet</servlet-name>
    <servlet-class>br.com.delphos.web.configuracao.AutoCompleteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LimparSessaoServlet</servlet-name>
    <servlet-class>br.com.delphos.web.vendas.LimparSessaoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FiltrarListasServlet</servlet-name>
    <url-pattern>/dbs/listas</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AutoCompleteServlet</servlet-name>
    <url-pattern>/dbs/autocomplete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LimparSessaoServlet</servlet-name>
    <url-pattern>/dbs/limparsessao</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/excecao/excecao.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/excecao/excecao.jsp</location>
  </error-page>
</web-app>